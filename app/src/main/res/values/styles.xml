<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="speedometerViewStyle">@style/SpeedometerViewStyle</item>
        <item name="tachometerViewStyle">@style/TachometerViewStyle</item>
    </style>


    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:minWidth">@dimen/min_button_width</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="SpeedometerViewStyle">
        <item name="borderColor">@color/colorPrimary</item>
        <item name="borderWidth">4dp</item>
        <item name="scaleColor">@color/colorAccent</item>
        <item name="scaleWidth">2dp</item>
        <item name="scalePadding">@dimen/margin_medium</item>
        <item name="scaleStartAngle">135</item>
        <item name="scaleEndAngle">45</item>
        <item name="scalePointWidth">12dp</item>
        <item name="numberTextSize">24sp</item>
        <item name="numberColor">@color/colorAccent</item>
        <item name="numberPadding">@dimen/margin_small</item>
        <item name="points">17</item>
        <item name="scalePointStep">10</item>
        <item name="arrowColor">@color/colorArrow</item>
        <item name="arrowWidth">6dp</item>
    </style>

    <style name="TachometerViewStyle">
        <item name="borderColor">@color/colorPrimary</item>
        <item name="borderWidth">4dp</item>
        <item name="scaleColor">@color/colorArrow</item>
        <item name="scaleWidth">2dp</item>
        <item name="scalePadding">@dimen/margin_medium</item>
        <item name="scaleStartAngle">145</item>
        <item name="scaleEndAngle">35</item>
        <item name="scalePointWidth">12dp</item>
        <item name="numberTextSize">28sp</item>
        <item name="numberColor">@color/colorArrow</item>
        <item name="numberPadding">@dimen/margin_small</item>
        <item name="points">10</item>
        <item name="scalePointStep">1</item>
        <item name="arrowColor">@color/colorArrow</item>
        <item name="arrowWidth">6dp</item>
    </style>
</resources>